<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#2FA2FD"
        android:orientation="vertical">

        <TextView
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/matter_work"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/ivCancelDelete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_cancel_delete"
            app:layout_constraintTop_toTopOf="@id/view1"
            app:layout_constraintStart_toStartOf="@id/view1"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/color1"
            android:textSize="18sp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="@id/view1"
            app:layout_constraintStart_toStartOf="@id/view1" />

        <TextView
            android:id="@+id/tvStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="35dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/color1"
            android:text=""
            app:layout_constraintTop_toTopOf="@id/view1"
            app:layout_constraintEnd_toEndOf="@id/view1"/>

        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_delete"
            app:layout_constraintTop_toTopOf="@id/view1"
            app:layout_constraintEnd_toEndOf="@id/view1"/>

        <TextView
            android:id="@+id/tvSkillTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text=""
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="@id/view1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tvSkillLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text=""
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="@id/view1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
            android:id="@+id/btnEnd"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/add_bottom1"
            android:text="结束计时"
            android:textColor="#a1a1a1"
            app:layout_constraintStart_toStartOf="@id/view1"
            app:layout_constraintBottom_toBottomOf="@id/view1"/>

        <Button
            android:id="@+id/btnStart"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/add_bottom2"
            android:text="开始计时"
            android:textColor="#ffffff"
            app:layout_constraintEnd_toEndOf="@id/view1"
            app:layout_constraintBottom_toBottomOf="@id/view1"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
