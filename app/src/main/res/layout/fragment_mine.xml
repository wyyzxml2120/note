<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="click"
            type="com.nlk.note.ui.page.MineFragment.ClickProxy" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:circle="http://schemas.android.com/apk/res/com.nlk.note"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2FA2FD">

        <com.nlk.note.rewriteview.CircleImageView
            android:id="@+id/ivHead"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/head"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            circle:radius="40dp"
            tools:ignore="ContentDescription"
            />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textSize="20sp"
            android:text="我有一只小毛驴"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toEndOf="@id/ivHead"
            app:layout_constraintTop_toTopOf="@id/ivHead"
            app:layout_constraintBottom_toTopOf="@id/tvSign"
            />

        <TextView
            android:id="@+id/tvSign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#90C7F2"
            android:text="用一句话来介绍自己~"
            app:layout_constraintStart_toStartOf="@id/tvName"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            app:layout_constraintBottom_toBottomOf="@id/ivHead"/>

        <TextView
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/mine_bg_view1"
            app:layout_constraintTop_toBottomOf="@id/ivHead"
            app:layout_constraintStart_toStartOf="parent"
            />

        <com.nlk.note.rewriteview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/icon_back"
            android:background="#419991"
            android:padding="20dp"
            circle:radius="50dp"
            app:layout_constraintStart_toStartOf="@id/view1"
            app:layout_constraintTop_toBottomOf="@id/view1"/>




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>